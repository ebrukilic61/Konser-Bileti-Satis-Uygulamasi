@{
    ViewData["Title"] = "KonserBiletim";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Agency - Start Bootstrap Theme</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/carousel/">
    <link href="css/bootstrap.mint.css" rel="stylesheet" />
    <style>
        body{
            background: linear-gradient(90deg, rgba(254,224,229,1) 0%, rgba(238,238,224,1) 41%, rgba(231,243,229,1) 69%, rgba(215,255,242,1) 100%);
        }

        .carousel-caption {
            width: 850px;
            z-index: 10;
            color: #fff;
            text-align: center;
            font-family:'Century Gothic';
            top: 70%;
            bottom: auto;
            -webkit-transform: translate(0, -50%);
            -ms-transform: translate(0, -50%);
            transform: translate(0, -50%);
        }

        footer {
            background-color: #343a40; 
            color: #fff;
            width : 100%;
            position: absolute;
            left: 0; 
            text-align: center;
        }

            footer a {
                color: #fff; /* Bağlantı rengini beyaz yapın */
                text-decoration: none; /* Altını çizgiyi kaldırın */
            }

                footer a:hover {
                    text-decoration: underline; /* Üzerine gelindiğinde altını çizin */
                }

        .artist-carousel {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            gap: 1rem;
            padding: 1rem 0;
            -webkit-overflow-scrolling: touch; /* Mobil uyumluluk */
            scroll-behavior: smooth; /* Yumuşak kaydırma */
        }

        .artist-item {
            flex: 0 0 auto;
            scroll-snap-align: center;
            width: 280px; /* Sabit genişlik */
            height: 280px; /* Sabit yükseklik */
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 10px; /* Köşeleri yuvarlatma */
            padding: 1rem;
        }

        .artist-img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
        }

        .artist-carousel::-webkit-scrollbar {
            display: none; /* Tarayıcı kaydırma çubuğunu gizle */
        }

    </style>
</head>
<body id="page-top">

    <section class="py-4">
        <div class="container px-4 px-lg-5 mt-5">
            <main role="main">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox" style=" width:100%; height: 600px; margin-top:0px; !important;">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/yelllow.png" alt="First slide">
                            <div class="container">
                                <div class="carousel-caption d-none d-md-block">
                                    <h1 style="color:aliceblue">"Konser Biletim aracılığı ile haftanın konserleri bir tık uzağında"</h1>
                                    <p></p>
                                    <p><a class="btn btn-lg btn-primary" href="#" role="button">Şimdi Tıkla</a></p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/klasik.png" alt="Second slide">
                            <div class="container">
                                <div class="carousel-caption d-none d-md-block">
                                    <p><a class="btn btn-lg btn-primary" href="#" role="button">Ayrıntılı Bilgi</a></p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-110" src="/images/ticket.png" alt="Third slide">
                            <div class="container">
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Önceki</span>
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Sonraki</span>
                    </a>
                </div>
        </div>
    </section>

    <section>
        <br />
    <section>

        <section class="py-5">
            <div class="container">
                <h2 class="text-center mb-4">Sanatçılar</h2>
                <div class="row">
                    <div class="col-12">
                        <div class="artist-carousel">
                            @foreach (var sanatci in Model.KonserSanatci.Sanatcilar)
                            {
                                <div class="artist-item">
                                    <img src="@Url.Content(sanatci.profilFotoPath)" alt="@sanatci.sanatciName" class="artist-img" />
                                    <br />
                                    <h5 class="text-center">@sanatci.sanatciName</h5>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <footer class="bg text-center p-3">
        <p>&copy; 2024 Konser Biletim</p>
        <p>
            <a href="mailto:info@konserbiletim.com">info@konserbiletim.com</a><br>
            Telefon: 0212 00 00 00<br>
            Adres: Örnek Mah. No: 1, İstanbul, Türkiye
        </p>
    </footer>
</body>
</html>