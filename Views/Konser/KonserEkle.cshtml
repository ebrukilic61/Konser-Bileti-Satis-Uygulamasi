@model KonserEkleViewModel

@{
    ViewData["Title"] = "Konser Ekle";
    Layout = "_Layout";
}

<style>
    body {
        margin-top: 80px;
        background-color: #eee;
    }
</style>

<h2>Konser Ekle</h2>

<form asp-action="KonserEkle" method="post">
    <div class="form-group">
        <label for="KonserName">Konser Adı</label>
        <input type="text" class="form-control" id="KonserName" name="KonserName" required />
    </div>

    <div class="form-group">
        <label for="KonserDate">Konser Tarihi</label>
        <input type="date" class="form-control" id="KonserDate" name="KonserDate" required />
    </div>

    <div class="form-group">
        <label for="KonserLocId">Konser Yeri</label>
        <select class="form-control" id="KonserLocId" name="KonserLocId" required>
            @foreach (var alan in Model.KonserAlanlari)
            {
                <option value="@alan.konserLocId">@alan.alanName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="SanatciId">Sanatçı</label>
        <select class="form-control" id="SanatciId" name="SanatciId" required>
            @foreach (var sanatci in Model.Sanatcilar)
            {
                <option value="@sanatci.sanatciID">@sanatci.sanatciName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="KonserTanim">Konser Tanımı</label>
        <textarea class="form-control" id="KonserTanim" name="KonserTanim"></textarea>
    </div>

    <div class="form-group">
        <label for="KonserDurumu">Konser Durumu</label>
        <select class="form-control" id="KonserDurumu" name="KonserDurumu" required>
            @foreach (var durum in Model.KonserDurumlari)
            {
                <option value="@durum.konserStatID">@durum.konser_durumu</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="YeniTarih">Yeni Tarih</label>
        <input type="date" class="form-control" id="YeniTarih" name="YeniTarih" />
    </div>

    <div id="biletKategorileriContainer">
        @for (int i = 0; i < Model.BiletKategorileri.Count; i++)
        {
            <div class="form-group">
                <label for="KategoriAdi">Bilet Kategorisi</label>
                <input type="text" class="form-control" name="BiletKategorileri[@i].KategoriAdi" value="@Model.BiletKategorileri[i].KategoriAdi" />
                <label for="Fiyat">Fiyat</label>
                <input type="number" class="form-control" name="BiletKategorileri[@i].Fiyat" value="@Model.BiletKategorileri[i].Fiyat" />
                <label for="KisiSayisi">Kişi Sayısı</label>
                <input type="number" class="form-control" name="BiletKategorileri[@i].KisiSayisi" value="@Model.BiletKategorileri[i].KisiSayisi" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</form>

